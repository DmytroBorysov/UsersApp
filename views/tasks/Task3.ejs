<div class="container">
  <p class="h4 mb-4">Find users by email</p>
  <% if (!param && !error) { %>
  <form class="col-6" action="/Task3" method="POST">
    <div class="mb-3">
      <label class="form-label">Email</label>
      <input class="form-control" type="email" name="email" />
    </div>
    <button class="btn btn-primary" type="submit">Find users</button>
  </form>
  <% } else { if (param) { %>
  <table class="table table-striped table-hover">
    <thead>
      <th>Name</th>
      <th>Surname</th>
      <th>Email</th>
      <th>Age</th>
    </thead>
    <tbody>
      <% param.forEach(function(user) { %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.surname %></td>
        <td><%= user.email %></td>
        <td><%= user.age %></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <% } else { %>
  <h2><%= error %></h2>
  <% } } %>
</div>
